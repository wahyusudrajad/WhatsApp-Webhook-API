<div class="card">
    <div class="card-header">
        <div>
            <h3 class="card-title">Actions</h3>
            <p class="card-description">Control the WhatsApp service.</p>
        </div>
        <i class="ri-gamepad-line"></i>
    </div>
    <div class="card-content">
        <div class="actions">
            <button class="btn btn-primary" id="refreshBtn" onclick="refreshStatus()">
                <i class="ri-refresh-line"></i>
                <span id="refreshText">Refresh</span>
            </button>
            <button class="btn btn-secondary" id="testBtn" onclick="testMessage()" disabled>
                <i class="ri-send-plane-line"></i>
                <span>Test Message</span>
            </button>
            <button class="btn btn-danger" id="waLogoutBtn" onclick="waLogout()" disabled>
                <i class="ri-logout-circle-r-line"></i>
                <span>Logout WA</span>
            </button>
        </div>
    </div>
</div> 