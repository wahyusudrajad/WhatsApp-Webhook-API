<script>
// Enhanced scroll reveal animation
document.addEventListener('DOMContentLoaded', function() {
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver(function(entries) {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('revealed');
            }
        });
    }, observerOptions);

    // Observe all cards and elements that should animate on scroll
    document.querySelectorAll('.card, .message-item, .alert').forEach(el => {
        el.classList.add('scroll-reveal');
        observer.observe(el);
    });

    // Add floating action button for quick actions
    const fab = document.createElement('button');
    fab.className = 'fab';
    fab.innerHTML = '<i class="ri-add-line" style="font-size: 24px;"></i>';
    fab.title = 'Quick Actions';
    document.body.appendChild(fab);

    // Add click handler for FAB
    fab.addEventListener('click', function() {
        // You can customize this to show a quick actions menu
        alert('Quick actions menu - customize as needed!');
    });
});
</script> 