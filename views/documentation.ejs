                                <h3>JavaScript (Node.js)</h3>
                                <div class="code-block">
const axios = require('axios');

async function sendMessage(to, message) {
  try {
    const response = await axios.post('https://your-domain.com/api/whatsapp/send', {
      to: to,
      message: message
    }, {
      headers: {
        'Authorization': 'Bearer YOUR_API_KEY',
        'Content-Type': 'application/json'
      }
    });
    
    console.log('Message sent:', response.data);
  } catch (error) {
    console.error('Error:', error.response.data);
  }
}

sendMessage('+6281234567890', 'Hello from Node.js!');
                                </div>
                                
                                <h3>Python</h3>
                                <div class="code-block">
import requests

def send_message(to, message):
    url = 'https://your-domain.com/api/whatsapp/send'
    headers = {
        'Authorization': 'Bearer YOUR_API_KEY',
        'Content-Type': 'application/json'
    }
    data = {
        'to': to,
        'message': message
    }
    
    response = requests.post(url, json=data, headers=headers)
    return response.json()

result = send_message('+6281234567890', 'Hello from Python!')
print(result)
                                </div>
                                
                                <h3>PHP</h3>
                                <div class="code-block">
<?php
function sendMessage($to, $message) {
    $url = 'https://your-domain.com/api/whatsapp/send';
    $data = json_encode([
        'to' => $to,
        'message' => $message
    ]);
    
    $options = [
        'http' => [
            'header' => [
                'Authorization: Bearer YOUR_API_KEY',
                'Content-Type: application/json'
            ],
            'method' => 'POST',
            'content' => $data
        ]
    ];
    
    $context = stream_context_create($options);
    $result = file_get_contents($url, false, $context);
    return json_decode($result, true);
}

$result = sendMessage('+6281234567890', 'Hello from PHP!');
print_r($result);
?>
